{
  "expo": {
    "name": "NewSmartShoppingApp",
    "slug": "NewSmartShoppingApp",
    "scheme": "smartshopping",

    "plugins": [
      [
        "react-native-google-mobile-ads",
        { "androidAppId": "ca-app-pub-xxxxxxxx~yyyyyyyy" }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "minSdkVersion": 24,
            "kotlinVersion": "2.0.21"
          }
        }
      ]
    ],

    "android": {
      "package": "com.smartshopping.app",
      "versionCode": 2,
      "permissions": []
    },

    "updates": {
      "url": "https://u.expo.dev/PASTE-YOUR-PROJECT-ID"
    },
    "runtimeVersion": { "policy": "sdkVersion" },
    "cli": { "appVersionSource": "remote" },

    "extra": {
      "eas": {
        "projectId": "PASTE-YOUR-PROJECT-ID"
      }
    }
  }
}
